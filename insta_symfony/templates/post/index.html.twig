{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_comments</th>
                <th>Id_medias</th>
                <th>Id_users</th>
                <th>Id_like</th>
                <th>Id_hashtag</th>
                <th>Description</th>
                <th>Post_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.idComments }}</td>
                <td>{{ post.idMedias }}</td>
                <td>{{ post.idUsers }}</td>
                <td>{{ post.idLike }}</td>
                <td>{{ post.idHashtag }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.postUrl }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
